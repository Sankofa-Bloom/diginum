# DigiNum Backend Environment Variables
# These values are sensitive and should never be exposed to the browser

# Server Configuration
PORT=4000
NODE_ENV=production

# Supabase Configuration
SUPABASE_URL=https://your-supabase-project.supabase.co
SUPABASE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret-key

# SMS Provider Configuration
SMS_API_KEY=your-sms-provider-api-key

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Swychr Payment Gateway Configuration
SWYCHR_EMAIL=your_swychr_email_here
SWYCHR_PASSWORD=your_swychr_password_here
SWYCHR_BASE_URL=https://api.accountpe.com/api/payin
SWYCHR_ENVIRONMENT=live

# Production URLs
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://your-api-domain.com

